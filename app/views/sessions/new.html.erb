<div class="panel panel-default">
  <div class="panel-heading">Se connecter</div>

  <div class="panel-body">
    <!--N'ayant pas besoin d'instance de modèle pour le formulaire on creè juste un hash(:user) pour le représenter-->
    <%=form_for :user, url: new_session_path, html: {class: 'form-horizontal'} do |f|%>

      <!--Champ username-->
      <div class="form-group">
        <%= f.label :username, "Nom d'utilisateur ou Email", class: 'col-md-4 control-label' %>
        <div class="col-md-6">
          <%= f.text_field :username, class: 'form-control' %>
        </div>
      </div>

      <!--Champ mdp-->
      <div class="form-group">
        <%= f.label :password, "Mot de passe", class: 'col-md-4 control-label' %>
        <div class="col-md-6">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <!--Champ bouton de validation-->
      <div class="form-group">
        <div class="col-md-6 col-md-offset-4">
          <button type="submit" class="btn btn-primary">Se connecter</button>
          <a href="<%= new_password_path %>" class="btn btn-link">Mot de passe oublie</a>
        </div>
    <% end %>
    </div>
  </div>
</div>