<!DOCTYPE html>
<html>
  <head>
    <title>Petsou</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!--Barre de navigation-->
    <div class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <a href="<%= root_path %>" class="navbar-brand">Petsou</a>
        </div>

        <ul class="nav navbar-nav navbar-right">

          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                <%= current_user.username %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Mon profil', profil_path %></li>
                <li><%= link_to 'Se dÃ©connecter', destroy_session_path, data: {method: :delete} %></li>
              </ul>
            </li>
          <% else %>
            <li><a href="<%= new_user_path %>">S'inscrire</a></li>
            <li><a href="<%= new_session_path %>">Se connecter</a></li>
          <%end %>

        </ul>

      </div>
    </div>

    <div class="container">
      <% if flash[:success] %>
        <div class="alert alert-success">
          <%= flash[:success] %>
        </div>
      <%end %>

      <% if flash[:danger] %>
        <div class="alert alert-danger">
          <%= flash[:danger] %>
        </div>
      <%end %>
      <%= yield %>

      <%= debug session[:auth] %>
    </div>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
